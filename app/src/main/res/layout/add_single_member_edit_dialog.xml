<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <EditText
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity = "center"
        android:layout_marginTop = "130dp"
        android:hint = "Enter the user's mail"
        android:textColor = "@color/black"
        android:id = "@+id/newMemberMailSearchEdit"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Add This Member And Exit"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/black"
        android:id = "@+id/addSingleMemberButtonEdit"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Exit without Saving"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/black"
        android:id="@+id/dontSaveThisMemberEdit"
        />

</LinearLayout>
